{
  "manifest_version": 3,
  "name": "NanoPeek - AI Link Previews",
  "version": "1.0",
  "description": "Shift+Hover to get instant AI summaries using Chrome's built-in Gemini Nano.",
  "permissions": ["activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "world": "MAIN"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["proxy.js"],
      "world": "ISOLATED"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
